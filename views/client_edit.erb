<h1>Update <%=@client.first_name() %> <%=@client.last_name() %> </h1>

  <form action="/clients/<%= @client.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="first_name">Change first name:</label>
    <input id="first_name" name="first_name" type="text" placeholder="<%= @client.first_name() %>">
    <label for="last_name">Change last name:</label>
    <input id="last_name" name="last_name" type="text" placeholder="<%= @client.last_name() %>">

    <button class="btn btn-default" type="submit">Update</button>
  </form>

  <form action="/clients/<%= @client.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">

    <button class="btn btn-default" type="submit">Delete client</button>
  </form>
