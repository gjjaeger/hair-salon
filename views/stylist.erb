<div class="container text-center">
  <h2> Current clients for this salon </h2>
  <h3> Name: <%= @stylist.name() %></h3>
  <h3> Address: <%=@stylist.address()%></h3>

    <% if @stylist.clients().any?() %>
     <h3>Here are all the clients for this salon:</h3>

     <ul>
       <% @stylist.clients().each() do |client| %>
         <li><%= client.first_name()%> <%= client.last_name()%></li>
       <% end %>
     </ul>

     <% else %>
       <p>There are no clients for this salon!</p>
    <% end %>
  <h3>Add a client to <%= @stylist.name() %> </h3>
   <form action="/clients" method="post">
     <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylist.id() %>">

     <div class="form-group">
       <label for="first_name">Given name of client:</label>
       <input id="first_name" name="first_name" type="text">
     </div>
     <div class="form-group">
       <label for="last_name">Last name of client:</label>
       <input id="last_name" name="last_name" type="text">
     </div>
     <button class = "btn" type="submit">Add client</button>
   </form>
</div>
   <hr>

 <div class="container text-center">
   <button class="btn"><a href="/stylists/<%= @stylist.id() %>/edit">Edit <%= @stylist.name() %> shop</a></button>
   <button class="btn"><a href="/">Return to Main Page</a></button>
 </div>
